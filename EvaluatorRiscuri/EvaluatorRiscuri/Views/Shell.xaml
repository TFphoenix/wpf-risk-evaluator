<Window x:Class="EvaluatorRiscuri.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:EvaluatorRiscuri.Views"
        xmlns:local="clr-namespace:EvaluatorRiscuri"
        mc:Ignorable="d"
        Title="Evaluator Riscuri"
        Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
    <Grid>
        <views:LoginView x:Name="LoginView" IsEnabled="True" Visibility="Visible"/>
        <views:RegisterView x:Name="RegisterView" IsEnabled="False" Visibility="Hidden"/>
        <views:MenuView x:Name="MenuView" IsEnabled="False" Visibility="Hidden"/>
    </Grid>
</Window>
